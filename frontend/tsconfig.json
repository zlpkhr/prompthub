{
  "compilerOptions": {
    "target": "es2023",
    "lib": ["es2023", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "module": "preserve",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strict": true,
    "erasableSyntaxOnly": true,
    "noEmit": true,
    "types": ["vite/client"]
  }
}
